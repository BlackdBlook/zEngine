#version 460 core
layout (location = 0) in vec3 aPos;

out vec3 TexCoords;

layout (std140) uniform Matrices
{
    mat4 view;
    mat4 projection;
};

//uniform mat4 view;
//uniform mat4 projection;

void main()
{
    mat4 view2 = mat4(mat3(view));
    
    
    TexCoords = aPos;
    gl_Position = projection * view2 * vec4(aPos, 1.0);
}